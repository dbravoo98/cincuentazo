<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="435.0" prefWidth="902.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cincuentazo.controller.GameController">

    <children>

        <!-- Carta central -->
        <ImageView fx:id="mesaCard"
                   fitHeight="180"
                   fitWidth="120"
                   layoutX="390"
                   layoutY="120"
                   pickOnBounds="true"
                   preserveRatio="true" />

        <!-- Panel derecho -->
        <VBox alignment="CENTER"
              layoutX="646"
              layoutY="22"
              prefHeight="391"
              prefWidth="235"
              style="-fx-border-color: black; -fx-border-radius: 20;">
            <children>

                <Label fx:id="lblTurno"
                       text="TURNO"
                       style="-fx-font-size: 18; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets top="10" />
                    </VBox.margin>
                </Label>

                <Label text="Suma actual:" />

                <Label fx:id="lblPuntos"
                       prefHeight="30"
                       prefWidth="80"
                       style="-fx-border-color: black; -fx-font-size: 16;"
                       text="0" />

                <Button text="Salir"
                        onAction="#salir"
                        prefWidth="100">
                    <VBox.margin>
                        <Insets top="20" />
                    </VBox.margin>
                </Button>

            </children>
        </VBox>

        <!-- Mano del jugador -->
        <HBox alignment="CENTER"
              layoutX="181"
              layoutY="321"
              spacing="15"
              prefHeight="100"
              prefWidth="309">

            <ImageView fx:id="card1"
                       fitHeight="83"
                       fitWidth="64"
                       pickOnBounds="true"
                       onMouseClicked="#onCard1Click"
                       preserveRatio="true" />

            <ImageView fx:id="card2"
                       fitHeight="83"
                       fitWidth="64"
                       pickOnBounds="true"
                       onMouseClicked="#onCard2Click"
                       preserveRatio="true" />

            <ImageView fx:id="card3"
                       fitHeight="83"
                       fitWidth="64"
                       pickOnBounds="true"
                       onMouseClicked="#onCard3Click"
                       preserveRatio="true" />

            <ImageView fx:id="card4"
                       fitHeight="83"
                       fitWidth="64"
                       pickOnBounds="true"
                       onMouseClicked="#onCard4Click"
                       preserveRatio="true" />

        </HBox>

    </children>
</AnchorPane>
